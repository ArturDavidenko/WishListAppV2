@model AddRoleUserViewModel


@{
}

<h1>User already have these roles: </h1>
<br>

@foreach (var item in Model.UserRoles)
{
    <tr>Role: @item</tr>
    <br>
}

<form asp-action="DeleteRoleUser" method="post">
    <div class="form-group" style="margin-top: 20px">
        <label asp-for="UserRoleNameToAdd" class="control-label"></label>
        <input asp-for="UserRoleNameToAdd" class="form-control" />
        <span asp-validation-for="UserRoleNameToAdd" class="text-danger"></span>
    </div>
    <input asp-for="UserId" type="hidden" value="@Model.UserId"/>
    <div class="form-group">
        <input type="submit" value="Delete Role" class="btn btn-danger"/>
    </div>
</form>

<div>
    <a asp-controller="Home" asp-action="AdminPage">Back to List</a>
</div>
